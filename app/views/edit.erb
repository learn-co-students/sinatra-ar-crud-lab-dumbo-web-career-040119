<h1><%=@article.title%></h1>
<p><%=@article.content%></p>

<form method="post" action="/articles/<%= @article.id %>">
    <input type="text" name="title">
    <input type="text" name="content">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    <input type="submit" value="Submit">
</form>